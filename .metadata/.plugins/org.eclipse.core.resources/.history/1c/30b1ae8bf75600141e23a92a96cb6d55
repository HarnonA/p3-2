import java.util.InputMismatchException;
import java.util.LinkedList;
import java.util.Scanner;


public class Usuario {
	private String nome;
	private String senha;
	private String login;
	private Scanner s = new Scanner(System.in);
	
	public Usuario(String nome, String senha, String login){
		this.nome = nome;
		this.senha = senha;
		this.login = login;
	}
	
	private int lerInt(){
		int num = 0;
		try {
			num = s.nextInt();
		} catch (InputMismatchException e) {
			System.out.println("Digite um valor valido!");
			s.nextLine();
			num = 0;
		}
		return num;
		
	}
	
	public void cadastrar(){
		String login, senha, senhaTeste, nome;
		System.out.print("Digite seu email:");
		login = s.nextLine();
		System.out.print("Digite nome do usuario:");
		nome = s.nextLine();
		System.out.print("Digite sua senha:");
		senha = s.nextLine();
		System.out.print("Confirme sua senha:");
		senhaTeste = s.nextLine();
		if(!senha.equals(senhaTeste))
			System.out.print("Senhas diferentes");
		
			
		
		
	}
	

}
